{
    "name": "esensi/core",
    "description": "The foundational components of Esensi",
    "keywords": ["emersonmedia", "esensi", "laravel", "ardent", "core"],
    "authors": [
        {
            "name": "Emerson Media, LP.",
            "email": "wishlist@emersonmedia.com"
        },
        {
            "name": "Bexar Creative, Inc.",
            "email": "web@bexarcreative.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "illuminate/support": "4.x",
        "laravelbook/ardent": "2.4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "phpspec/phpspec": "2.0.*",
        "mockery/mockery": "dev-master",
        "way/generators": "1.*",
        "way/laravel-test-helpers": "dev-master"
    },
    "suggest": {
        "thephpleague/flysystem": "Flysystem is a filesystem abstraction which allows you to easily swap out a local filesystem for a remote one.",
        "laravel/cashier": "Laravel Cashier provides an expressive, fluent interface to Stripe's subscription billing services.",
        "ignited/laravel-omnipay": "Integrates the Omnipay PHP library with Laravel 4 via a ServiceProvider to make Configuring multiple payment tunnels a breeze!",
        "anahkiasen/former": "A Laravelish way to create and format forms."
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "laravelbook/ardent",
                "version": "2.4.3",
                "source": {
                    "type": "git",
                    "url": "https://github.com/bexarcreativeinc/ardent.git",
                    "reference": "bexarcreativeinc-master"
                },
                "require": {
                    "php": ">=5.3.0",
                    "illuminate/support": "4.x",
                    "illuminate/database": "4.x",
                    "illuminate/validation": "4.x"
                },
                "autoload": {
                    "psr-0": {
                        "LaravelBook\\Ardent": "src/"
                    }
                }
            }
        }
    ],
    "autoload": {
        "classmap": [
            "src/migrations"
        ],
        "psr-0": {
            "Esensi": "src/"
        }
    },
    "minimum-stability": "dev"
}
